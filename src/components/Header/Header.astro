---
import {
  convertVersionString,
  getLanguageFromURL,
  getVersionFromURL,
} from "../../languages";
import SkipToContent from "./SkipToContent.astro";
import SidebarToggle from "./SidebarToggle";
import LanguageSelect from "./LanguageSelect";
import VersionSelect from "./VersionSelect";

type Props = {
  currentPage: string;
};

const { currentPage } = Astro.props;
const lang = getLanguageFromURL(currentPage);
const version = getVersionFromURL(currentPage);
---

<header>
  <script async defer src="https://buttons.github.io/buttons.js"></script>

  <SkipToContent />
  <nav class="nav-wrapper" title="Top Navigation">
    {
      currentPage != "/" && (
        <div class="menu-toggle">
          <SidebarToggle client:idle />
        </div>
      )
    }
    <div class="logo">
      <a href="/">
        <img height="40" src="https://github.com/GreedyKomodoDragon/Kontroler/raw/main/ui/public/logo.svg" /> Kontroler
      </a>
    </div>
    
    <div class="nav-links">
      <a href="/docs" class="nav-link">Documentation</a>
      <a href="/examples" class="nav-link">Examples</a>
    </div>

    {
      currentPage != "/" && (
        <>
          <LanguageSelect lang={lang} client:idle />
          <VersionSelect version={convertVersionString(version)} client:idle />
        </>
      )
    }
    
    <div class="nav-right">
      <a class="github-button"
        href="https://github.com/GreedyKomodoDragon/Kontroler"
        data-icon="octicon-star"
        data-size="large"
        data-show-count="true"
        aria-label="Star ntkme/github-buttons on GitHub">Star</a>
    </div>
  </nav>
</header>

<style>
  header {
    z-index: 11;
    height: var(--theme-navbar-height);
    width: 100%;
    background-color: var(--theme-navbar-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    position: sticky;
    top: 0;
  }

  .logo {
    flex: 1;
    display: flex;
    overflow: hidden;
    width: 30px;
    font-size: 2rem;
    flex-shrink: 0;
    font-weight: 600;
    line-height: 1;
    color: hsla(var(--color-base-white), 100%, 1);
    gap: 0.25em;
  }

  .logo a {
    display: flex;
    padding: 0.5em 0.25em;s
    margin: -0.5em -0.25em;
    text-decoration: none;
    font-weight: bold;
  }

  .logo a {
    transition: color 100ms ease-out;
    color: var(--theme-text);
    font-size: 0.8em;
  }

  .logo a:hover,
  .logo a:focus {
    color: var(--theme-text-accent);
  }

  .nav-wrapper {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 1em;
    width: 100%;
    max-width: 82em;
    padding: 0 1rem;
  }

  .nav-links {
    display: none;
    gap: 2rem;
    margin: 0 auto;
  }

  .nav-link {
    color: var(--theme-text);
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: var(--theme-text-accent);
    text-decoration: none;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-top: 5px;
  }

  @media (min-width: 50em) {
    header {
      position: static;
      padding: 2rem 0rem;
    }

    .title {
      display: none;
    }

    .logo {
      width: auto;
      margin: 0;
      z-index: 0;
    }

    .logo h1 {
      display: initial;
    }

    .menu-toggle {
      display: none;
    }

    .nav-links {
      display: flex;
    }

    .nav-wrapper {
      justify-content: space-between;
    }
  }

  /** Style Algolia */
  :root {
    --docsearch-primary-color: var(--theme-accent);
    --docsearch-logo-color: var(--theme-text);
  }

  .search-item {
    display: none;
    position: relative;
    z-index: 10;
    flex-grow: 1;
    padding-right: 0.7rem;
    display: flex;
    max-width: 200px;
  }

  @media (min-width: 50em) {
    .search-item {
      max-width: 400px;
    }
  }

  .anchor {
    text-decoration: none;
    cursor: pointer;
  }
  .anchor:hover {
    text-decoration: none;
    cursor: pointer;
  }

  .docs {
    margin-top: 0.2em !important;
  } 
</style>

<style is:global>
  .search-item > * {
    flex-grow: 1;
  }
</style>
